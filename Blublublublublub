Always yours ü§ç`;

        // Password Logic
        function checkPass() {
            const pass = document.getElementById('passInput').value;
            if(pass === 'ilovemybabysomuch') {
                document.getElementById('passSection').classList.add('hidden');
                document.getElementById('proposalSection').classList.remove('hidden');
            } else {
                alert("Incorrect password. Hint: Check the hint below the box!");
            }
        }

        // Falling Hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart-fall');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 3 + 2 + 's';
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 5000);
        }
        setInterval(createHeart, 300);

        // Shrinking/Growing Logic
        let noCount = 0;
        const noTexts = ["Are you sure?", "Really?", "Your baby will get sad ‚òπÔ∏è"];
        
        function rejectProposal() {
            const noBtn = document.getElementById('noBtn');
            const yesBtn = document.getElementById('yesBtn');
            
            if (noCount < noTexts.length) {
                noBtn.innerText = noTexts[noCount];
                noCount++;
            }
            
            let currentNoSize = parseInt(window.getComputedStyle(noBtn).fontSize);
            let currentYesSize = parseInt(window.getComputedStyle(yesBtn).fontSize);
            
            noBtn.style.fontSize = Math.max(currentNoSize - 3, 2) + "px";
            noBtn.style.padding = "2px";
            yesBtn.style.fontSize = (currentYesSize + 20) + "px";
        }

        function acceptProposal() {
            document.getElementById('proposalSection').classList.add('hidden');
            document.getElementById('successSection').classList.remove('hidden');
        }

        // Typewriter Logic
        function startTypewriter() {
            document.getElementById('envelopeSection').classList.add('hidden');
            document.getElementById('letterArea').classList.remove('hidden');
            
            let i = 0;
            const speed = 40; // Adjust speed in milliseconds
            const container = document.getElementById('typewriter');

            function type() {
                if (i < myLetter.length) {
                    container.textContent += myLetter.charAt(i);
                    i++;
                    // Auto-scroll as it types
                    container.scrollTop = container.scrollHeight;
                    setTimeout(type, speed);
                }
            }
            type();
        }

        function generateSecret() {
            const wall = document.getElementById('secretWall');
            wall.classList.remove('hidden');
            let content = "";
            for(let i=0; i<1000; i++) {
                content += "I Love You ‚ù§Ô∏è ";
            }
            wall.innerText = content;
        }
